<script>
  // Parallax effect for vertical scroll — per-element data-speed og rAF for ydeevne
  document.addEventListener("DOMContentLoaded", () => {
    const parallaxElements = Array.from(document.querySelectorAll(".parallax"));
    const globalSlowdown = 5; // <1 = langsommere; fx 0.25 betyder 4x langsommere

    let latestScroll = 0;
    let ticking = false;

    function update() {
      parallaxElements.forEach((el, index) => {
        // læs evt. data-speed på elementet (fx data-speed="0.005")
        const data = parseFloat(el.getAttribute("data-speed"));
        // default baseret på index hvis ikke defineret
        const baseSpeed = Number.isFinite(data) ? data : (index + 1) * 0.01;
        const speed = baseSpeed * globalSlowdown;
        el.style.transform = `translateX(-${latestScroll * speed}px)`;
      });
      ticking = false;
    }

    window.addEventListener(
      "scroll",
      () => {
        latestScroll = window.scrollY;
        if (!ticking) {
          window.requestAnimationFrame(update);
          ticking = true;
        }
      },
      { passive: true }
    );
  });
</script>
