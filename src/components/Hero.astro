<script>
  import { scroll, animate } from "motion";

  // Horizontal scroll animation
  scroll(
    animate("#horisontalliste", {
      transform: ["none", "translateX(-500vw)"],
    }),
    { target: document.querySelector("#horisontalscrollsection") }
  );

  // Parallax effect for vertical scroll
  document.addEventListener("DOMContentLoaded", () => {
    window.addEventListener("scroll", () => {
      const scrollPosition = window.scrollY; // Use vertical scroll position
      const parallaxElements = document.querySelectorAll(".parallax");

      parallaxElements.forEach((element, index) => {
        const speed = (index + 1) * 0.1; // Customize the speed multiplier
        element.style.transform = `translateX(-${scrollPosition * speed}px)`; // Move to the left
      });
    });
  });
</script>
